<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.blog.mapper.UserMapper">

    <!-- Member 테이블 가져오기 -->
    <select id="getUserList" resultType="com.spring.blog.vo.UserVo">
        SELECT *
        FROM member
    </select>

    <!-- 회원가입 -->
    <insert id="insertUser">
        INSERT INTO member
            (id, pw, email, name)
        VALUES
            (#{id}, #{pw}, #{email}, #{name})
    </insert>

    <!-- 회원 정보 가져오기 -->
    <select id="getUserById" resultType="com.spring.blog.vo.UserVo">
        SELECT *
        FROM member
        WHERE id = #{id}
    </select>

    <!-- 회원정보 수정 -->
    <update id="updateUser">
        UPDATE member
        SET name = #{name},
            email = #{email},
            pw = #{pw}
        WHERE id = #{id}
    </update>

    <!-- 탈퇴 -->
    <delete id="deleteUser">
        DELETE
        FROM member
        WHERE id = #{id}
    </delete>
</mapper>